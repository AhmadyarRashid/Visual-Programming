<Window x:Class="assignment_1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1" Height="600" Width="400">
    <Border Padding="10">
    <StackPanel>
        <Border Padding="10"></Border>
        <TextBlock Text="Profile" FontWeight="Bold"></TextBlock>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="showResult" Name="showResult"></TextBlock>
                <Image Grid.Column="1" Name="userImg"></Image>
            </Grid>
       
        
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Content="Logout" Click="Button_Click_1"></Button>
            <Button Content="Edit" Grid.Column="1" Click="Button_Click"></Button>

        </Grid>
       </StackPanel>
    </Border>

</Window>
