<Window x:Class="Lecture14.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="auto" Width="auto">
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition>
                
            </ColumnDefinition>

            <ColumnDefinition>

            </ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Button Name="InsertBtn" Content="Insert" Click="InsertBtn_Click"/>
            <Button Name="DeleteBtn" Content="Delete" Click="DeleteBtn_Click"/>
            <Button Name="EditBtn" Content="Edit" Click="EditBtn_Click"/>
            <Button Name="UpdateBtn" Content="Update" Click="UpdateBtn_Click" Visibility="Collapsed"/>
            
     
            <DataGrid Name="DG1" IsReadOnly="True"/>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <Label Content="Name"/>
            <TextBox Name="nametxt" Margin="5" />
            <Label Content="Specialization" />
            <TextBox Name="specialtxt" Margin="5" />
            <Label Content="Designation" />
            <TextBox Name="designationtxt" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
