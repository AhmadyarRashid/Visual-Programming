<Window x:Class="Lecture10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        
        <StackPanel>
            <TextBox Name="Name" TextAlignment="Center"></TextBox>
            <TextBox Name="Phone" TextAlignment="Center"></TextBox>
            <Button Name="Button" Click="Button_Click" Content="Add"></Button>
            
            <Button Name="SByName" Content="Search by name" Click="SByName_Click"></Button>
            <Button Name="SByPhone" Content="Search by phone number" Click="SByPhone_Click"></Button>
            
            <ListBox Name="lBox"></ListBox>
            
        </StackPanel>

    </Grid>
</Window>
