<Window x:Class="serachPhone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <TextBlock Text="Add contact"></TextBlock>
        
        <TextBlock Text="enter your name"></TextBlock>
        <TextBox Name="tbname"></TextBox>
        <TextBlock Text="Phone" ></TextBlock>
        <TextBox Name="tbphone"></TextBox>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                
                
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0" Content="Add" Click="Button_Click" ></Button>
            <Button Grid.Column="1" Content="SearchByName" Click="Button_Click_1" ></Button>
            <Button Grid.Column="2" Content="SearchByPhone" Click="Button_Click_2"></Button>
        </Grid>
        <TextBlock Name="result" Text="Result:"></TextBlock>
    </StackPanel>
</Window>
